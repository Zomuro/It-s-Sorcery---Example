<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- Example 1: Logos Experimentia -->
	
	<ItsSorceryFramework.ProgressTrackerDef ParentName = "ProgressTrackerLevelBase">
		<progressTrackerClass>ItsSorceryFramework.ProgressTracker_Level</progressTrackerClass>
		<defName>ISFE_ProgressTrackerRPG_Logos</defName>
		<label>Logic System</label>
		<bgPath>UI/ProgressTracker/Logos</bgPath>
		
		<progressHediff>ISFE_ProgressTrackerRPG_Hediff_Logos</progressHediff>
		<levelFactors>
			<li>
				<level>1</level>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>0.1</offset>
					</li>
				</capMods>
			</li>
			<li>
				<level>3</level>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>0.2</offset>
					</li>
				</capMods>
				<optionChoices>2</optionChoices>
				<options>
					<li>
						<label>Speed</label>
						<description>The quicker your legs, the quicker the mind.</description>
						<statOffsets>
							<MoveSpeed>0.25</MoveSpeed>
						</statOffsets>
					</li>
					<li>
						<label>Wit</label>
						<description>Clever men and women do much more with the same amount of knowledge.</description>
						<statOffsets>
							<GlobalLearningFactor>0.1</GlobalLearningFactor>
						</statOffsets>
					</li>
					<li>
						<label>Focus</label>
						<description>Steady towards the goal- that's how progress is really made.</description>
						<statOffsets>
							<PainShockThreshold>-0.05</PainShockThreshold>
						</statOffsets>
					</li>
				</options>
			</li>
			<li>
				<level>5</level>
				<statOffsets>
					<MoveSpeed>0.5</MoveSpeed>
				</statOffsets>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>0.3</offset>
					</li>
				</capMods>
			</li>
		</levelFactors>
		<levelSpecifics>
			<li>
				<level>10</level>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>0.5</offset>
					</li>
				</capMods>
			</li>
			<li>
				<level>20</level>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>1</offset>
					</li>
				</capMods>
			</li>
		</levelSpecifics>
		<levelLabels>
			<li><level>1</level><label>initiate</label></li>
			<li><level>5</level><label>seeker</label></li>		
			<li><level>10</level><label>adjunct</label></li>
			<li><level>15</level><label>professor</label></li>
			<li><level>20</level><label>emeritus</label></li>
		</levelLabels>
		<expTags>
			<li>ISFE_Logos_EXPTag_CastEnergyCost</li>
			<li>ISFE_Logos_EXPTag_OnDamage</li>
			<li>ISFE_Logos_EXPTag_OnDamaged</li>
			<li>ISFE_Logos_EXPTag_OnSkillEXP</li>
		</expTags>
	</ItsSorceryFramework.ProgressTrackerDef>
	
	<HediffDef ParentName="ProgressTrackerHediffBase"> 
		<defName>ISFE_ProgressTrackerRPG_Hediff_Logos</defName>
		<hediffClass>ItsSorceryFramework.Hediff_ProgressLevel</hediffClass>
		<label>Logic Gate</label>
		<defaultLabelColor>(0.8,0.8,0.8)</defaultLabelColor> <!-- gray color -->
		<description>The gate to a user's knowledge, where all that can and must be known passes through. Abandon your irrationality here, for only pure truth may pass... and only truth may be transmuted into power.</description>
		<initialSeverity>1</initialSeverity> <!-- Severity is bound to level of implant -->
		<minSeverity>0</minSeverity>
		<maxSeverity>20</maxSeverity>
		<countsAsAddedPartOrImplant>false</countsAsAddedPartOrImplant>
		<stages>	
		</stages>
	</HediffDef>
	
