<Defs>

	<!-- Example 1: Logos Experimentia -->
	<StatDef>
		<defName>ISFE_Brainpower</defName>
		<label>brainpower</label>
		<category>Sorcery_ISF</category>
		<description>The mental processing power required to perform science.</description>
		<defaultBaseValue>10</defaultBaseValue>
		<showIfUndefined>false</showIfUndefined>
		<displayPriorityInCategory>1</displayPriorityInCategory>
	</StatDef>
	
	<StatDef>
		<defName>ISFE_Theory</defName>
		<label>theory</label>
		<category>Sorcery_ISF</category>
		<description>The abstractness brought on by science. Too much of it is a bad thing.</description>
		<defaultBaseValue>10</defaultBaseValue>
		<showIfUndefined>false</showIfUndefined>
		<displayPriorityInCategory>1</displayPriorityInCategory>
	</StatDef>	
	
	<!-- Example 2: Coomsumerism -->
	<StatDef>
		<defName>ISFE_Stamina</defName>
		<label>stamina</label>
		<category>Sorcery_ISF</category>
		<description>The amount of vigor it takes to perform on the field.</description>
		<defaultBaseValue>10</defaultBaseValue>
		<showIfUndefined>false</showIfUndefined>
		<displayPriorityInCategory>1</displayPriorityInCategory>
	</StatDef>
	
	<StatDef>
		<defName>ISFE_Ecstasy</defName>
		<label>ecstasy</label>
		<category>Sorcery_ISF</category>
		<description>The amount of pleasure gained from the exertion of a sorcery.</description>
		<defaultBaseValue>25</defaultBaseValue>
		<showIfUndefined>false</showIfUndefined>
		<displayPriorityInCategory>1</displayPriorityInCategory>
	</StatDef>
	
