	</StatDef>
	
	<StatDef>
		<defName>ISFE_SorceryStat_Coomsumerism_Ecstasy</defName>
		<label>ecstasy</label>
		<category>Sorcery_ISF</category>
		<description>The amount of pleasure gained from using one of the forbidden techniques of Coomsumerism.</description>
		<defaultBaseValue>25</defaultBaseValue>
		<showIfUndefined>false</showIfUndefined>
